<article class="event-card">
  <div class="event-card__container">
    <a href="#" class="event-card__link" aria-label="Ссылка на мероприятие."></a>

    <div class="event-card__content">
      <div class="event-card__image">{{>components/image no-2x=true img=img ext="jpg"}}</div>
      <div class="event-card__text">
        <p class="event-card__timetable"><b>Начало мероприятия:</b> <time>{{time}}</time></p>
        <h4 class="event-card__title">{{title}}</h4>
        <p class="event-card__action"><a href="#" class="event-card__btn">Читать подробнее</a></p>
      </div>
    </div>
  </div>
</article>