<div class="home-slider js-home-slider">
  <div class="home-slider__content swiper-container js-home-slider__content">
    <ul class="swiper-wrapper">
      {{#each home.slider}}
        <li class="swiper-slide home-slide">
          <div class="home-slide__bg">{{>components/image no-2x=true img=img ext=ext}}</div>
          <div class="home-slide__container">
            <div class="home-slide__content">
              <span class="home-slide__title">{{title}}</span>
              <ul class="home-slide__list">
                {{#each this.list}}
                  <li>{{item}}</li>
                {{/each}}
              </ul>
            </div>
          </div>
        </li>
      {{/each}}
    </ul>
    <div class="home-slider__nav">
      {{>components/slider-nav js-class="home-slider"}}
    </div>
    <div class="home-slider__pagination">
      <div class="js-home-slider__pagination"></div>
    </div>
  </div>
</div>